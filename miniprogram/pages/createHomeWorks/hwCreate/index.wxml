<view class="section head">
  <picker bindchange="bindPickerChange" range-key="{{'name'}}" value="{{index}}" range='{{objectArray}}'>
    <view class="picker">第{{questionNumber}}题： {{objectArray[index].name}}
      <text class="trend">﹀</text>
    </view>
  </picker>
</view>

<!-- 单选题 -->
<form bindsubmit="GetSingle" hidden="{{index==0?flase:true}}">
  <textarea placeholder="问题描述（300字以内）" name="textarea" maxlength="300" value="{{form_info}}"></textarea>
  <view class="answer_area">
    <radio-group class="radio-group" bindchange="radioChange">
      <view class="ans_row" wx:for="{{radioArray}}" wx:for-index="idx">
        <radio value='{{ans_id[idx]}}' class="item" checked='{{checked}}'>{{ans_id[idx]}}：</radio>
        <input placeholder='答案描述' name="{{ans[idx]}}" value="{{form_info}}"></input>
      </view>
    </radio-group>
    <view class="add" catchtap='additem' id="0">+添加选项</view>
    <view class="del" catchtap='delitem' id="0">-删除选项</view>
  </view>
  <button form-type='submit'>继续创建下一题</button>
  <button class="submit" form-type='submit' id="finish">完成创建</button>
</form>

