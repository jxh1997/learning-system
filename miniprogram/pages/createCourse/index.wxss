/* pages/create/create.wxss */
page {
  background: #efefef;
  border-top: thin solid #ddd;
  font-size: 28rpx;
  color: #666;
}

.head {
  width: 80%;
  margin: 30rpx auto;
  background: white;
  padding: 5% 7.5%;
  border-radius: 25rpx;
}

.head .row {
  margin: 45rpx 0 60rpx;
}

.row1 input {
  border-bottom: thin solid #ddd;
  text-align: center;
  padding: 10rpx 0;
  margin-top: 50rpx;
  height: 60rpx;
  line-height: 60rpx;
}

.row2 {
  margin-bottom: 0;
  border-bottom: thin dashed #ddd;
  text-align: center;
}

.add-img {
  margin-left: 0;
  border: thin dashed #ddd;
  background: white;
  width: 150rpx;
  height: 150rpx;
  color: #999;
  line-height: 100rpx;
  margin: 30rpx 0;
}

.add-img:active {
  background: #c5c5c5;
}

.head form .row3 {
  height: 60rpx;
  margin-top: -30rpx;
  line-height: 60rpx;
}

.row3 switch {
  transform: scale(.8);
  float: right;
}

#submit {
  background: #24dd82;
  color: white;

  margin: 140rpx auto 30rpx;
  border: 0;
  display: block;
}

#submit:active {
  background: #178d52;
}