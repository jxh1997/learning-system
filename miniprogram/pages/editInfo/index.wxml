<!--miniprogram/pages/editInfo/index.wxml-->
<view class="head">
  <view class="title">设置个人信息
    
  </view>
  <form bindsubmit='submituser'>
    <view class="row">
      <label>姓名
        <text style="color:red">*</text>
      </label>
      <input name="username" value='{{userInfo.username}}'></input>
    </view>
    <view class="row">
      <label>性别
        <text style="color:red">*</text>
      </label>
      <input name="username" value='{{userInfo.sex}}'></input>
    </view>
    <view class="row">
      <label>学号/工号
        <text style="color:red">*</text>
      </label>
      <input name="number" value='{{userInfo.userid}}'> </input>
    </view>
    <view class="row">
      <label>手机
        <text style="color:red">*</text>
      </label>
      <input name="telephone" value='{{userInfo.tel}}'></input>
    </view>
    <view class="row">
      <label>密码
        <text style="color:red">*</text>
      </label>
      <input name="password" type="password"></input>
    </view>
    <button form-type='submit'>确定</button>
  </form>

</view>
<view class="tip">
  <text>学号和密码将作为用户登陆的凭证</text>
</view>
