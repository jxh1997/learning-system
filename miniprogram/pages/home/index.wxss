/*recommend*/
.recommend {
  width: 95%;
  margin: auto;
  background: white;
  border-radius: 25rpx;
  height: min-content;
  color: #666;
  font-size: 28rpx;
  box-shadow: 0 0 15rpx #ddd;
  margin-top: 30rpx;
  margin-bottom: 100rpx;
}

.recommend .title {
  text-align: center;
  padding-bottom: 25rpx;
  width: 80%;
  margin: auto;
}

.recommend .row {
  width: 90%;
  border-top: thin solid #eee;
  margin: 0 auto;
  padding: 25rpx 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.row:active {
  background: #efefef;
}

.recommend .row .photo {
  width: 70rpx;
  height: 70rpx;
}

.recommend .row .photo image {
  width: 100%;
  height: 100%;
}

.recommend .row .desc {
  color: #666;
  margin-left: 50rpx;
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  height: 80rpx;
  vertical-align: top;
}

.recommend .row .desc text:first-child {
  color: #666;
  font-weight: normal;
}

.recommend .row .trend {
  font-size: 120%;
  float: right;
  line-height: 80rpx;
  color: #999;
  margin-left: 5rpx;
}

.recommend .row .desc,
.recommend .row .photo,
.recommend .row .trend {
  display: inline-block;
}

.recommend .row .desc .teacher {
  display: block;
  color: #999 !important;
}

.null {
  line-height: 130rpx;
  text-align: center;
  /* font-size: 30rpx; */
}

/*add*/
.add {
  position: fixed;
  right: 80rpx;
  bottom: 80rpx;
  border-radius: 50%;
  width: 100rpx;
  height: 100rpx;
  background: #24dd82;
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 10;
}
.add image{
  width: 60%;
  height: 60%;
}
